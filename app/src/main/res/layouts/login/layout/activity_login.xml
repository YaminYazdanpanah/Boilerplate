<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:background="@android:color/transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                fontPath="@string/casablanca_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="42dp"
                android:text="@string/salam"
                android:textColor="@color/txt_color_dark"
                android:textSize="34sp" />

            <androidx.appcompat.widget.AppCompatTextView
                fontPath="@string/casablanca_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="42dp"
                android:text="@string/wellcome_to_bimer"
                android:textColor="@color/txt_color_light"
                android:textSize="20sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="7.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    fontPath="@string/bhoma_font"
                    android:layout_width="48dp"
                    android:layout_height="56dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/code_shape"
                    android:gravity="center"
                    android:text="+98"
                    android:textColor="@color/colorwhite"
                    android:textSize="17sp" />

                <androidx.appcompat.widget.AppCompatEditText
                    fontPath="@string/bhoma_font"
                    android:layout_width="223dp"
                    android:layout_height="56dp"
                    android:background="@drawable/phone_number_shape"
                    android:gravity="center"
                    android:hint="شماره موبایل خود را وارد کنید"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textColor="@color/colorwhite"
                    android:textColorHint="#FFBDDF"
                    android:textSize="17sp" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                fontPath="@string/iransans_font"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="ثبت نام در بیمر به منزله قبول قوانین و شرایط است"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <androidx.appcompat.widget.AppCompatTextView
            fontPath="@string/casablanca_font"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="bottom"
            android:text="@string/get_code"
            android:textColor="@color/colorwhite"
            android:textSize="17sp" />

    </FrameLayout>


</FrameLayout>